---
export interface Props {
  html: string;
}
const { html } = Astro.props;
---

<div class="html-container" set:html={html} />

<style is:inline>
  .html-container {
    line-height: 1.8rem;
    img {
      width: auto;
      height: auto;
      max-width: 100%;
      max-height: 30rem;
      display: block;
      margin-block: 1.2rem;
      margin-inline: auto;
    }
    h1 {
      font-size: 2rem;
    }
    h2 {
      border-inline-start: 7px solid var(--theme-color);
      padding-inline-start: 11px;
      padding-block: 0.1rem;
      border-block-end: 1px solid var(--border-color);
      margin-block: 2rem 0.8rem;
    }
    h3 {
      border-block-end: 1px solid var(--border-color);
      margin-block: 1rem 0.5rem;
    }
    h4 {
      margin-block-end: 0.5rem;
    }
    table,
    th,
    td {
      margin: 0;
      border-spacing: 0;
    }
    table {
      margin-block: 1rem;
      margin-inline: auto;
    }
    th,
    td {
      border-inline-start: 1px solid var(--border-color-dark);
      border-block-start: 1px solid var(--border-color-dark);
      padding: 4px;
    }
    th:last-of-type,
    td:last-of-type {
      border-inline-end: 1px solid var(--border-color-dark);
    }
    tr:last-of-type {
      td {
        border-block-end: 1px solid var(--border-color-dark);
      }
    }

    a {
      color: var(--theme-color);
      text-decoration: none;
    }
    a:hover,
    a:active {
      color: var(--theme-color-dark);
      text-decoration: underline;
    }
    details {
      border-radius: 8px;
      border: 1px solid var(--border-color);
      margin-block: 1rem;
    }
    details > summary {
      font-size: 0.9rem;
      cursor: pointer;
      border-radius: 8px;
      padding: 0.5rem;
      padding-inline-start: 12px;
    }
    details[open] > summary {
      background-color: var(--light-gray);
      border-radius: 8px 8px 0 0;
      border-block-end: 1px solid var(--border-color);
    }
    p {
      margin-block: 0;
    }
    * + p {
      margin-block-start: 1.2rem;
    }

    /* See src/esa-utils/details-content-marker.ts */
    .details-content {
      padding: 16px;
    }
  }
</style>
